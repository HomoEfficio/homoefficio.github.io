<div id="about">
    <div id="about-card">
        <div id="about-btn-close">
            <i class="fa fa-remove"></i>
        </div>
        <% if (theme.gravatar_email) { %>
            <img id="about-card-picture" src="<%- gravatar(theme.gravatar_email, 110) %>"/>
        <% } else if (theme.author.picture) { %>
            <img id="about-card-picture" src="<%- url_for(theme.image_dir + '/' + theme.author.picture) %>"/>
        <% } %>
            <h4 id="about-card-name"><%= config.author %></h4>
        <% if (theme.author.bio) { %>
            <h5 id="about-card-bio"><%- markdown(theme.author.bio) %></h5>
        <% } %>
        <% if (theme.author.job) { %>
            <h5 id="about-card-job">
                <i class="fa fa-briefcase"></i>
                <br/>
                <%- markdown(theme.author.job) %>
            </h5>
        <% } %>
        <% if (theme.author.location) { %>
            <h5 id="about-card-location">
                <i class="fa fa-map-marker"></i>
                <br/>
                <%= theme.author.location %>
            </h5>
        <% } %>
    </div>
</div>